<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/beacon_clickable"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/beacon_list"
        android:padding="8dp">

    <TextView
        android:id="@+id/beacon_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="top|start"
        android:text="Beacon"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/beacon_title"
        android:layout_marginTop="4dp"
        android:text="10m"/>

        </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/beacon_detail"
        android:visibility="visible"
        android:background="@android:color/white"
        android:padding="8dp"
        android:elevation="6dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/beacon_detail_title"
            android:text="Beacon"
            android:textStyle="bold"
            android:textSize="24sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10m"
            android:id="@+id/beacon_detail_distance"
            android:textSize="16sp"
            android:layout_below="@+id/beacon_detail_title"
            android:layout_marginTop="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/beacon_detail_distance"
            android:text="MAC XX:XX:XX:XX:XX:XX:XX"/>
    </RelativeLayout>

</RelativeLayout>